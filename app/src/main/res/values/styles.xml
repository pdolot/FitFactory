<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryMedium</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondaryMedium</item>
        <item name="android:statusBarColor">@color/black90</item>
        <item name="android:navigationBarColor">@color/black90</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textColor">@color/silverLight</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TopBarTitle">
        <item name="android:textColor">@color/primaryLight</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:textColor">@color/silverLight</item>
        <item name="android:fontFamily">@font/kenyan_coffee_rg</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MenuItemTextView">
        <item name="android:textColor">@color/silverLight</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonLabel">
        <item name="android:textColor">@color/secondaryVeryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonPositiveLabel">
        <item name="android:textColor">@color/positiveLight</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemLabelTextView">
        <item name="android:textColor">@color/primaryMedium</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="ItemValueTextView">
        <item name="android:textColor">@color/silverLight</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="FancyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlActivated">@color/primaryMedium</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
