<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="backgroundColor" format="color" />
    <attr name="iconColor" format="color" />

    <declare-styleable name="style">
        <attr name="backgroundColor"/>
        <attr name="color" format="color" />
        <attr name="iconColor" />
        <attr name="disabledIconColor" format="color" />
        <attr name="icon" format="reference" />
        <attr name="iconLeft" format="reference" />
        <attr name="iconRight" format="reference" />
        <attr name="outlineColor" format="color" />
        <attr name="hintColor" format="color"/>
        <attr name="drawBar" format="boolean"/>
        <attr name="topBarId" format="reference"/>
        <attr name="view" format="reference"/>
        <attr name="thumbSize" format="dimension"/>
        <attr name="barWidth" format="dimension"/>
        <attr name="iconDown" format="reference"/>
        <attr name="iconUp" format="reference"/>

        <attr name="pieceCount" format="integer"/>
        <attr name="spacePercent" format="integer"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="progress" format="float"/>

        <attr name="buttonRadius" format="dimension"/>
        <attr name="bias" format="float"/>
        <attr name="spaceWidth" format="dimension"/>
        <attr name="roundRadius" format="dimension"/>
        <attr name="thumbColor" format="color"/>
        <attr name="disableColor" format="color"/>
        <attr name="isEnable" format="boolean"/>
        <attr name="paddingTop" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MyTabLayout">
        <attr name="backgroundColor"/>
        <attr name="indicatorRadius" format="dimension"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="activeIndicatorColor" format="color"/>
        <attr name="itemCount" format="integer"/>
        <attr name="tabTitle" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="leftIconDrawable" format="reference"/>
        <attr name="rightIconDrawable" format="reference"/>
        <attr name="iconColor"/>
        <attr name="iconPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="tint" format="color"/>
        <attr name="positiveTint" format="color"/>
        <attr name="negativeTint" format="color"/>
        <attr name="text" format="string"/>
        <attr name="secondAnimType" format="enum">
            <enum name="none" value="0"/>
            <enum name="send" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="FrameView">
        <attr name="color"/>
        <attr name="strokeWidth"/>
    </declare-styleable>

    <declare-styleable name="MeshView">
        <attr name="color"/>
        <attr name="strokeWidth"/>
        <attr name="rows" format="integer"/>
        <attr name="cols" format="integer"/>
    </declare-styleable>

</resources>