<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:background="@drawable/item_background"
        android:elevation="@dimen/layout_elevation"
        android:padding="@dimen/small_margin">

    <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_map"
            android:tint="@color/primaryLight"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/fitnessClub_name"
            app:layout_constraintTop_toTopOf="@id/fitnessClub_name"/>

    <ImageView
            android:id="@+id/timeSpentIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_date"
            android:tint="@color/silverLight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/entryDate"
            app:layout_constraintBottom_toBottomOf="@id/entryDate"/>

    <TextView
            android:id="@+id/fitnessClub_name"
            style="@style/FontH3_BOLD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="FitFactory 1"
            android:textColor="@color/primaryLight"
            android:layout_marginStart="@dimen/small_margin"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/locationIcon"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/entryDate"
            style="@style/FontH4_MEDIUM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="12/03/2019 13:49"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/small_margin"
            app:layout_constraintStart_toStartOf="@id/fitnessClub_name"
            app:layout_constraintTop_toBottomOf="@id/fitnessClub_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>