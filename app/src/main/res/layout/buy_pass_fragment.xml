<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/black90"
        tools:context=".presentation.fragments.buyPassFragment.BuyPassFragment"
        android:padding="@dimen/screen_padding">

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/buyPassFragment_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buyPassFragment_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <github.chenupt.springindicator.SpringIndicator
            android:id="@+id/buyPassFragment_indicator"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            app:siIndicatorColor="@color/primaryMedium"
            app:siTextSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/buyPassFragment_viewPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/buyPassFragment_buyPassBackground"/>

    <ImageView
            android:id="@+id/buyPassFragment_buyPassBackground"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:src="@drawable/load_button_anim2v2"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/buyPassFragment_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/buyPassFragment_buyPassLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KUP KARNET"
            style="@style/ButtonLabel"
            android:paddingEnd="78dp"
            android:paddingStart="78dp"
            app:layout_constraintBottom_toBottomOf="@id/buyPassFragment_buyPassBackground"
            app:layout_constraintTop_toTopOf="@id/buyPassFragment_buyPassBackground"
            app:layout_constraintEnd_toEndOf="@id/buyPassFragment_buyPassBackground"
            app:layout_constraintStart_toStartOf="@id/buyPassFragment_buyPassBackground"/>


</androidx.constraintlayout.widget.ConstraintLayout>