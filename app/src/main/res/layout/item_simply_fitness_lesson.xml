<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:background="@drawable/item_background"
        android:elevation="@dimen/layout_elevation">

    <androidx.cardview.widget.CardView
            android:layout_margin="1dp"
            android:id="@+id/cardView"
            android:alpha="0.25"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@null"
            app:cardCornerRadius="8dp"
            app:layout_constraintDimensionRatio="3:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationZ="-2dp">

        <ImageView
                android:id="@+id/fitnessLesson_promoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fitnesslesson_placeholder"
                android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/diagonal_shadow"
            app:layout_constraintTop_toTopOf="@id/cardView"
            app:layout_constraintBottom_toBottomOf="@id/cardView"
            app:layout_constraintStart_toStartOf="@id/cardView"
            app:layout_constraintEnd_toEndOf="@id/cardView"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/small_margin">
        <TextView
                android:id="@+id/fitnessLesson_name"
                style="@style/FontH3_BOLD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="CrossFit"
                android:textColor="@color/primaryVeryLight"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/wasPresent" />

        <TextView
                android:id="@+id/fitnessLesson_date"
                style="@style/FontH4_MEDIUM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="12/03/2019 13:49"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                app:layout_constraintStart_toStartOf="@id/fitnessLesson_name"
                app:layout_constraintTop_toBottomOf="@id/fitnessLesson_name"
                app:layout_constraintEnd_toStartOf="@id/wasPresent"/>

        <ImageView
                android:id="@+id/signOutFromLesson"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_signout"
                android:padding="8dp"
                android:tint="@color/negativeLight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:id="@+id/wasPresent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_fitness_lesson"
                android:tint="@color/primaryBgColor5"
                android:layout_marginEnd="@dimen/small_margin"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/signOutFromLesson"
                app:layout_constraintEnd_toStartOf="@id/signOutFromLesson"
                app:layout_constraintBottom_toTopOf="@id/isPaid"/>

        <ImageView
                android:id="@+id/isPaid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_pay"
                android:padding="1dp"
                android:tint="@color/primaryBgColor5"
                android:layout_marginEnd="@dimen/small_margin"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@id/wasPresent"
                app:layout_constraintEnd_toStartOf="@id/signOutFromLesson"
                app:layout_constraintBottom_toBottomOf="@id/signOutFromLesson"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>