<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black90"
        tools:context=".presentation.fragments.buyPass.BuyPassFragment">

    <com.example.fitfactory.presentation.customViews.tabLayout.MyTabLayout
            android:id="@+id/buyPassFragment_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:color="@color/black85"
            app:indicatorActiveColor="@color/primaryLight"
            app:indicatorColor="@color/black80"
            app:indicatorRadius="6dp"
            app:itemCount="6"
            />

