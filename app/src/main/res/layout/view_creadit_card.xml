<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/corner_radius_background">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.89" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="1.0"
            app:layout_constraintBottom_toBottomOf="@id/guide89"
            app:layout_constraintDimensionRatio="25:16"
            app:layout_constraintEnd_toEndOf="@id/guide90"
            app:layout_constraintStart_toStartOf="@id/guide10"
            app:layout_constraintTop_toTopOf="@id/guide08">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.19">

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:maxLines="1"
                    android:text="@string/credit_card"
                    android:gravity="center|end"
                    android:textColor="@color/silverLight"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guide50"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chip"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.32">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/credit_card_chip"
                    android:tint="@color/silverLight"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    app:layout_constraintDimensionRatio="5:4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20">
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cardNumber"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:maxLines="1"
                    tools:text="1234 1234 1234 1234 1234"
                    android:gravity="center"
                    android:textColor="@color/silverLight"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="2sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.13">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cvcLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntumono_regular"
                    android:gravity="center|end"
                    android:maxLines="2"
                    android:text="CVC\nCVV"
                    android:includeFontPadding="false"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp"
                    android:textAllCaps="true"
                    android:textColor="@color/silverLight"
                    android:textSize="8sp"
                    app:autoSizeMaxTextSize="10sp"
                    app:autoSizeMinTextSize="4sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cvcCvv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:maxLines="1"
                    tools:text="123"
                    android:textAllCaps="true"
                    android:gravity="center|start"
                    android:textColor="@color/silverLight"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/small_margin"
                    android:includeFontPadding="false"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeStepGranularity="2sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cvcLabel"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/validThru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="@font/ubuntumono_regular"
                    android:text="VALID\nTHRU"
                    android:textAllCaps="true"
                    android:gravity="center|end"
                    android:includeFontPadding="false"
                    android:textColor="@color/silverLight"
                    android:textSize="8sp"
                    android:paddingTop="2sp"
                    android:paddingBottom="2sp"
                    android:layout_marginEnd="@dimen/small_margin"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="10sp"
                    app:autoSizeMinTextSize="4sp"
                    app:autoSizeStepGranularity="2sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/expiryDate"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/expiryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:maxLines="1"
                    tools:text="09/20"
                    android:textAllCaps="true"
                    android:gravity="center|start"
                    android:textColor="@color/silverLight"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeStepGranularity="2sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.16">
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/owner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/ubuntumono_regular"
                    android:maxLines="1"
                    tools:text="Patryk Dolecinski"
                    android:textAllCaps="true"
                    android:gravity="center|start"
                    android:textColor="@color/silverLight"
                    android:textSize="30sp"
                    android:includeFontPadding="false"
                    android:paddingTop="6sp"
                    android:paddingBottom="6sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeStepGranularity="1sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


