<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/primaryBgColor">

    <com.otaliastudios.cameraview.CameraView
            android:id="@+id/cameraView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:keepScreenOn="true"
            app:cameraAudio="off"
            app:cameraGestureTap="autoFocus"
            app:cameraPlaySounds="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/frameView"
            app:layout_constraintEnd_toEndOf="@id/frameView"
            app:layout_constraintStart_toStartOf="@id/frameView"
            app:layout_constraintTop_toTopOf="@id/frameView">


        <com.example.fitfactory.presentation.customViews.MeshView
                android:id="@+id/scannerMesh"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:alpha="0.8"
                android:rotation="360"
                android:visibility="invisible"
                app:color="@color/primaryVeryLight"
                app:cols="40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="2:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:rows="20"
                app:strokeWidth="1dp"
                tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.example.fitfactory.presentation.customViews.FrameView
            android:id="@+id/frameView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="64dp"
            app:color="@color/silverLight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="4dp" />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/shadow_background"
            android:tint="@color/primaryBgColor2"

            app:layout_constraintBottom_toTopOf="@id/frameView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:rotation="180"
            android:src="@drawable/shadow_background"
            android:tint="@color/primaryBgColor2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frameView" />


</androidx.constraintlayout.widget.ConstraintLayout>