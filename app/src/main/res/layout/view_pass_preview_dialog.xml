<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@color/primaryBgColor"
                android:padding="@dimen/medium_margin">

            <androidx.cardview.widget.CardView
                    android:id="@+id/qrCode_cardView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@null"
                    app:cardCornerRadius="4dp"
                    android:layout_marginStart="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_margin"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <ImageView
                        android:id="@+id/qrCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/passName"
                    android:layout_marginTop="@dimen/medium_margin"
                    style="@style/FontH1_BOLD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryVeryLight"
                    app:layout_constraintTop_toBottomOf="@id/qrCode_cardView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="ProAge 12M"/>

            <TextView
                    android:id="@+id/userLabel"
                    android:layout_marginTop="@dimen/small_margin"
                    style="@style/FontH6_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryLight"
                    app:layout_constraintTop_toBottomOf="@id/passName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Użytkownik karnetu"/>

            <TextView
                    android:id="@+id/user"
                    android:layout_marginTop="@dimen/mini_margin"
                    style="@style/FontH5_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    app:layout_constraintTop_toBottomOf="@id/userLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Jan Kowalski"/>

            <TextView
                    android:id="@+id/durationLabel"
                    android:layout_marginTop="@dimen/small_margin"
                    style="@style/FontH6_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryLight"
                    app:layout_constraintTop_toBottomOf="@id/user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Karnet ważny w okresie"/>

            <TextView
                    android:id="@+id/duration"
                    android:layout_marginTop="@dimen/mini_margin"
                    style="@style/FontH5_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    app:layout_constraintTop_toBottomOf="@id/durationLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="09/12/2019 - 09/12/2020"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.5"
                    android:orientation="vertical"/>

            <TextView
                    android:id="@+id/boughtDateLabel"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    style="@style/FontH6_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryLight"
                    app:layout_constraintTop_toBottomOf="@id/duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guide50"
                    android:text="Data zakupu"/>

            <TextView
                    android:id="@+id/boughtDate"
                    android:layout_marginTop="@dimen/mini_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    style="@style/FontH5_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    app:layout_constraintTop_toBottomOf="@id/boughtDateLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guide50"
                    tools:text="09/12/2019"/>


            <TextView
                    android:id="@+id/priceLabel"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginStart="@dimen/small_margin"
                    style="@style/FontH6_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryLight"
                    app:layout_constraintTop_toBottomOf="@id/duration"
                    app:layout_constraintStart_toStartOf="@id/guide50"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Cena za okres"/>

            <TextView
                    android:id="@+id/price"
                    android:layout_marginTop="@dimen/mini_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    style="@style/FontH5_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    app:layout_constraintTop_toBottomOf="@id/boughtDateLabel"
                    app:layout_constraintStart_toStartOf="@id/guide50"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="89,99 zł / msc"/>

            <TextView
                    android:id="@+id/passDescriptionLabel"
                    android:layout_marginTop="@dimen/small_margin"
                    style="@style/FontH6_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryLight"
                    app:layout_constraintTop_toBottomOf="@id/boughtDate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Opis karnetu"/>

            <TextView
                    android:id="@+id/passDescription"
                    android:layout_marginTop="@dimen/mini_margin"
                    style="@style/FontH5_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    app:layout_constraintTop_toBottomOf="@id/passDescriptionLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"/>

            <TextView
                    android:id="@+id/passBenefitsLabel"
                    android:layout_marginTop="@dimen/small_margin"
                    style="@style/FontH6_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryLight"
                    app:layout_constraintTop_toBottomOf="@id/passDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Benefity posiadania karnetu"/>

            <TextView
                    android:id="@+id/passBenefits"
                    android:layout_marginTop="@dimen/mini_margin"
                    style="@style/FontH5_MEDIUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    app:layout_constraintTop_toBottomOf="@id/passBenefitsLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="- lorem Ipsum is simply dummy text\n- of the printing and typesetting industry.\n- lorem Ipsum has been the industry's\n- standard dummy text ever since the 1500s"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
